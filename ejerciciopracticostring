// ejerciciopracticostring.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include <string>
#include <stdlib.h>
#define tam 100
using namespace std;



int main()
{
   int total;
   string nombres[tam], vecinvertido[tam], nombre, apellido, continuar;
   unsigned int encontro;
   do{
      cout << "ingrese el numero de nombres: ";
      cin >> total;
   } while ((total<=0)||(total > tam));
   cin.ignore(); // ignora lo anterior
   for (int i = 0; i < total; i++)
   {
      cout << "Ingrese el " << i + 1 << " nombre: ";
      getline(cin, nombres[i]);
    }
    cout << "\nResultados\n";
    for (int i = 0; i < total; i++)
    {
       encontro = nombres[i].find(' ', 0);
       if (encontro != string::npos)
       {
           nombre = nombres[i].substr(0, encontro);
           apellido = nombres[i].substr(encontro + 1,nombres[i].length());
           vecinvertido[i]=apellido +"," +nombre;
		   
		   
           
	   } 
	}
	for (int i=0;i<tam;i++)
		cout<< vecinvertido[i]<<endl;
  
	
	system("pause");
    return 0;
}

